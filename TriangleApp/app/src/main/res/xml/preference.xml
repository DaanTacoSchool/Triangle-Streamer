<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/category_id"
        android:key="category_identity">

        <EditTextPreference
            android:key="username"
            android:title="@string/display_name"
            android:summary="@string/username_summary"
            android:dialogTitle="@string/display_name"
            android:dialogMessage="@string/username_dialog_message"
            android:defaultValue="Anoniem" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/category_sec"
        android:key="category_security">

        <EditTextPreference
            android:key="key_algorithm"
            android:title="@string/key_algorithm_title"
            android:summary="@string/key_algorithm_summary"
            android:dialogTitle="@string/key_algorithm_dialog_title"
            android:dialogMessage="@string/ka_dm"
            android:defaultValue="RSA" />
        <EditTextPreference
            android:key="sign_algorithm"
            android:title="@string/sa_title"
            android:summary="@string/sa_summary"
            android:dialogTitle="@string/sa_dt"
            android:dialogMessage="@string/sa_dm"
            android:defaultValue="SHA1withRSA" />
        <EditTextPreference
            android:key="key_size"
            android:title="@string/ks_title"
            android:summary="@string/ks_summary"
            android:dialogTitle="@string/ks_dt"
            android:dialogMessage="@string/ks_dm"
            android:numeric="integer"
            android:defaultValue="1024" />
        <EditTextPreference
            android:key="key_alias"
            android:title="@string/ka_title"
            android:summary="@string/kas_summary"
            android:dialogTitle="@string/kas_dt"
            android:dialogMessage="@string/kas_dm"
            android:defaultValue="TriangleKey" />
        <EditTextPreference
            android:key="key_store"
            android:title="@string/kst_title"
            android:summary="@string/kst_summary"
            android:dialogTitle="@string/kst_dt"
            android:dialogMessage="@string/kst_dm"
            android:defaultValue="AndroidKeyStore" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/category_con"
        android:key="category_connection">

        <EditTextPreference
            android:key="stream_destination_address"
            android:title="@string/sda_title"
            android:summary="@string/sda_summary"
            android:dialogTitle="@string/sda_dt"
            android:dialogMessage="@string/sda_dm"
            android:defaultValue="ws://188.226.164.87/server/send"/>

    </PreferenceCategory>

    <PreferenceCategory
    android:title="@string/category_dev"
    android:key="category_device">

    <EditTextPreference
        android:key="file_helper_save_location"
        android:title="@string/fh_title"
        android:summary="@string/fh_summary"
        android:dialogTitle="@string/fh_dt"
        android:dialogMessage="@string/fh_dm"
        android:defaultValue="TriangleApp" />


     <ListPreference
         android:key="max_record_duration"
         android:title="@string/mrd_title"
         android:summary="@string/mrd_summary"
         android:entries="@array/record_length_keys"
         android:entryValues="@array/record_length_values" />


        <EditTextPreference
            android:key="display_orientation"
            android:title="@string/do_title"
            android:summary="@string/do_summary"
            android:dialogTitle="@string/do_dt"
            android:dialogMessage="@string/do_dm"
            android:numeric="integer"
            android:defaultValue="90" />

</PreferenceCategory>
</PreferenceScreen>